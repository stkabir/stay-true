---
import { markdownify } from "@/lib/utils/textConverter";


export type Plan = {
  title: string;
  price: string;
  description: string;
  features: string[];
};

export type Pricing = {
  title: string;
  plans: Plan[];
};

const { pricing } = Astro.props as { pricing: Pricing };
if (!pricing) {
  throw new Error("Pricing data is required");
}
---

<section class="section pricing relative">
  <div class="container">
    <div class="row justify-center text-center">
      <div class="col-12 lg:col-8">
        <h2 class="text-3xl font-semibold text-text md:text-4xl" set:html={markdownify(pricing.title)}/>
      </div>
    </div>
    <div class="row mt-10 gap-y-8">
      {pricing.plans.map((plan) => (
        <div class="col-12 md:col-6 lg:col-4">
          <article class="group flex h-full flex-col rounded-3xl border border-white/10 bg-white/80 p-8 shadow-xl transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl backdrop-blur dark:border-white/5 dark:bg-surface/80">
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-text" set:html={markdownify(plan.title)}/>
              <p class="mt-3 text-3xl font-bold text-accent" set:html={markdownify(plan.price)}/>
              <p class="mt-4 text-sm text-text-secondary" set:html={markdownify(plan.description)}/>

              {plan.features?.length && (
                <ul class="mt-6 space-y-3 text-sm text-text">
                  {plan.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <span class="mt-1 h-2 w-2 flex-none rounded-full bg-accent/80" aria-hidden="true" />
                      <span set:html={markdownify(feature)} />
                    </li>
                  ))}
                </ul>
              )}
            </div>

            <div class="mt-8">
              <a
                href="mailto:hola@staytrue.dev"
                class="inline-flex items-center justify-center rounded-full border border-accent bg-accent px-6 py-2 text-sm font-semibold text-white transition-colors duration-300 hover:bg-transparent hover:text-accent dark:border-accent/60 dark:bg-accent/90 dark:hover:bg-transparent"
              >
                Hablar con nosotros
              </a>
            </div>
          </article>
        </div>
      ))}
    </div>
  </div>
</section>
